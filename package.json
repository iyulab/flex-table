    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage"
  },
  "keywords": [
    "web-component",
    "data-grid",
    "table",
    "lit",
    "spreadsheet"
  ],
  "license": "MIT",
  "author": "iyulab",
  "homepage": "https://github.com/iyulab/flex-table#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/iyulab/flex-table.git"
  },
  "bugs": {
    "url": "https://github.com/iyulab/flex-table/issues"
  },
  "dependencies": {
    "lit": "^3.2.0"
  },
  "devDependencies": {
    "jsdom": "^28.1.0",
    "typescript": "~5.7.0",
    "vite": "^6.0.0",
    "vitest": "^3.0.0"
  }
}
